{
  "name": "orkestral",
  "version": "0.0.1",
  "description": "A tool for creating device-based collective performances",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "concurrently \"tsc -b -w\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch apps/server/src/server.ts",
    "dev:client": "cd apps/client && npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rescheer/orkestral.git"
  },
  "keywords": [],
  "author": "Robby Scheer",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/rescheer/orkestral/issues"
  },
  "homepage": "https://github.com/rescheer/orkestral#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
