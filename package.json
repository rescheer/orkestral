{
  "name": "orkestral",
  "version": "0.0.1",
  "description": "A tool for creating device-based collective performances",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:server": "cd apps/server && npm run build",
    "build:client": "cd apps/client && npm run build",
    "dev:server": "npm run build:server && cd apps/server && npm run dev",
    "dev:client": "cd apps/client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "dev": "concurrently \"npm run dev:server\"  \"npm run dev:client\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rescheer/orkestral.git"
  },
  "keywords": [],
  "author": "Robby Scheer",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/rescheer/orkestral/issues"
  },
  "homepage": "https://github.com/rescheer/orkestral#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0"
  }
}
