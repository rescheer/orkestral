{
  "compilerOptions": {
    "target": "ES2020", // Specifies the target JavaScript version for emitted code (adjust based on Node version)
    "module": "es2020", // Specifies the module system for the generated JavaScript
    "outDir": "./dist", // Redirect output structure to the directory 'dist'
    "rootDir": "./src", // Specify the root directory of source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure that casing is consistent throughout a file
    "resolveJsonModule": true, // Include modules imported with ".json" extension
    "sourceMap": true, // Generates corresponding ".map" file
    "lib": ["ES2020"], // Specify library files to be included in the compilation (exclude "DOM" for backend)
    "moduleResolution": "node" // Use Node.js module resolution strategy
  },
  "include": ["src/**/*", "../../packages/shared/src/types.ts"], // Include all files within the 'src' directory
  "exclude": ["node_modules"], // Exclude the node_modules directory from compilation
  "references": [{ "path": "../../packages/shared" }]
}
